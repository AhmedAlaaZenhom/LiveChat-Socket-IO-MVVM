<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">



    <TextView
        android:id="@+id/userNameTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="12sp"
        android:textStyle="bold"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp"
        app:layout_constraintTop_toTopOf="parent"
        android:visibility="gone"
        android:layout_marginTop="4dp"/>

    <TextView
        android:id="@+id/messageTextTV"
        android:background="@drawable/white_cornered_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:maxWidth="240dp"
        android:padding="8dp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="3dp"
        app:layout_goneMarginTop="3dp"
        app:layout_constraintTop_toBottomOf="@+id/userNameTV"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginStart="8dp" />

    <TextView
        android:id="@+id/messageTimeTV"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintStart_toEndOf="@+id/messageTextTV"
        android:layout_marginStart="4dp"
        app:layout_constraintBottom_toBottomOf="@+id/messageTextTV" />

</androidx.constraintlayout.widget.ConstraintLayout>